#!/bin/bash

echo " "
echo "configuring coildes ..."              

COILDES_DIR=`pwd`
COILDES_BIN=${COILDES_DIR}/bin
echo " "
echo "COILDES_DIR = ${COILDES_DIR}"

# ODEPACK stuff
DIR_ODEPACK=${COILDES_DIR}/odepack/src
cp ${DIR_ODEPACK}/{opkda1.f,opkda2.f,opkdmain.f,demo/LSODE.f} ${COILDES_DIR}/src/


echo " "
echo "Add the following line to your profile, eg ~/.profile"
echo "PATH=\"${COILDES_BIN}:\$PATH\""

echo " "
echo "Then source your profile "
echo "source ~/.profile"
echo " "
echo "done."              







